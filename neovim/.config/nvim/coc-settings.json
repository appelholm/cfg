{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": ["c", "cpp", "objc", "objcpp"],
            "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
            "initializationOptions": {
                "cache": {
                    "directory": "/home/kj/tmp/caches/.ccls-cache"
                },
                "highlight": {
                    "lsRanges": true
                }
            }
        },
        "bash": {
            "command": "bash-language-server",
            "args": ["start"],
            "filetypes": ["sh"],
            "ignoredRootPaths": ["~"]
        },
        "digestif": {
            "command": "digestif",
            "filetypes": ["tex", "plaintex", "context"],
        }
    }
}
